{
  "manifest_version": 3,
  "name": "wine-searcher",
  "version": "1.0",
  "description": "Adds wine-searcher.com as a search engine and context menu action",
  "icons": {
    "16": "./icons/ws-16.png",
    "32": "./icons/ws-32.png",
    "64": "./icons/ws-64.png",
    "128": "./icons/ws-128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "search",
    "menus"
  ],
  "chrome_settings_overrides": {
    "search_provider": {
      "name": "wine-searcher",
      "keyword": "@ws",
      "search_url": "https://www.wine-searcher.com/find/{searchTerms}",
      "favicon_url": "./icons/ws-16.png",
      "is_default": false,
      "encoding": "UTF-8"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{9b649654-b585-4b9c-b025-accb98f2aed4}"
    }
  }
}